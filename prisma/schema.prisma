datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   @default("resident")
  invoices Invoice[]
  requests Request[]
}

model Invoice {
  id          Int      @id @default(autoincrement())
  amount      Float
  dueDate     DateTime
  isPaid      Boolean  @default(false)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Request {
  id          Int      @id @default(autoincrement())
  description String
  status      String   @default("pending")
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
